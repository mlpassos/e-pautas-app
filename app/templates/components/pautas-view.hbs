{{yield}}
<div class="row isogrid">
  <div class="grid-sizer"></div>
{{#each model as |pauta|}}
  <div class="col l3 m4 s12 isoitem">
  {{!-- {{g-maps name="my-map" lat=lat lng=lng zoom=zoom  class="img-responsive"}}  --}}
    {{#md-card title=pauta.retranca
    image='https://maps.googleapis.com/maps/api/staticmap?center={{lat}},{{lng}}&zoom=16&size=600x300&maptype=roadmap&markers=color:blue%7Clabel:S%7C{{lat}},{{lng}}&key=AIzaSyAcqXF6nzd3bfoM7LvN9Y4NloaHI-leLq0' 
    activator=true}}
    {{#md-card-content}}
      <br>
      <p>
        {{substr pauta.encaminhamento size=12}}
      </p>
      <br>
      <p>
        Envolvidos: {{pautas-total-users pauta.equipe}}
      </p>
      <ul class="list-inline list-unstyled">
        {{#each pauta.equipe as |user|}}
          <li>
            <img src="{{user.photoURL}}" class="card-user-image" alt="imagem do usuário participante da equipe" title="{{user.displayName}}">
          </li>
        {{/each}}
      </ul>
      <br>
	    {{md-btn text='Ver pauta' on-action="goPauta" action="goPauta" actionArg=pauta.id  
			buttonType="flat" 
			class='indigo white-text btn-ler-mais'}}
    {{/md-card-content}}
    {{#md-card-reveal}}
      <p>
        Data e Hora:
        <hr>
        {{pauta.dataHora}}
      </p>
      <p>
        Local:
        <hr>
        {{pauta.local}}
      </p>
      {{!-- <img class="img-responsive" src="https://maps.googleapis.com/maps/api/staticmap?center={{lat}},{{lng}}&zoom=13&size=600x300&maptype=roadmap&markers=color:blue%7Clabel:S%7C{{lat}},{{lng}}&key=AIzaSyAcqXF6nzd3bfoM7LvN9Y4NloaHI-leLq0" al='mapa do local da pauta'> --}}
      <p>
        Informações:
        <hr>
        <small class="text-left">
          {{pauta.informacoes}}
        </small>
      </p>
    {{/md-card-reveal}}
{{/md-card}}
  </div>
{{/each}}
</div>