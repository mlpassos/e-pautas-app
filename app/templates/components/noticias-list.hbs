{{yield}}
<div class="row isogrid">
  <div class="grid-sizer"></div>
{{#each model as |noticia|}}
{{!-- {{log noticia}} --}}
  <div class="col l4 m4 s4 x12 isoitem">
    <div class="thumbnail">
      {{#link-to "noticia" noticia}}
        <img src="{{noticia.thumbnail}}" alt="...">
      {{/link-to}}
        <div class="caption">
          <h3 class="text-left">{{noticia.title}}</h3>
          {{#link-to "noticia" noticia}}
            {{#if noticia.excerpt}}
              <small class="text-left">{{{substr noticia.excerpt size=12}}}</small>
            {{/if}}
          {{/link-to}}
        </div>       
      {{#each noticia.tags as |value|}}
        <span>{{link-to value.title "tag" value.slug 1}}</span>
      {{/each}}
    </div>
  </div>
{{/each}}
</div>
{{!-- {{check-pagination }} --}}
{{#if page}}
<div class="row">
  <div class="col l12">
    {{!-- {{md-pagination min=1 max=model.meta.pages current=page range=7}} --}}
    {{noticias-pages origem=origem current=page total=model.meta.pages}} 
  </div>
</div>
{{/if}}